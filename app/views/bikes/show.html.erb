<div id="flash-show">
  <%= render "layouts/flashes" %>
</div>
<%= render "layouts/nav2" %>
<div class="bike-show-container">
  <div id="bike-stats" class="row">
    <div class="five columns" id="show-bike-img-container">
      <% if @bike.bikeImg? %>
        <%= image_tag(@bike.bikeImg, class: "show-bike-img") %>
      <% else %>
        <%= image_tag(@bike.bikeImgURL, class: "show-bike-img") %>
      <% end %>
      <div class="row">
        <% if user_signed_in? %>
          <% if @bike.user_id == current_user.id %>
            <button id="show-edit" class="edit-bike-button">Edit Bike</button>
            <button id="delete-bike"><%= link_to("Delete Bike", bike_path(@bike), method: :delete) %></button>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="five columns" id="show-bike-details-container">
      <%= render 'details' %>
    </div>
  </div> <!-- row -->
</div>
<div id="bike-edit-form">
  <%= render 'edit' %>
</div>
