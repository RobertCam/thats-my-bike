<%= form_for @user do |f| %>

  <div class="row">
    <div class="three columns">
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, class: "edit-profile-field" %>
      </div>
    </div>
    <div class="three columns">
      <div class="field">
        <%= f.label :firstName, "First Name" %>
        <%= f.text_field :firstName, class: "edit-profile-field" %>
      </div>
    </div>
    <div class="three columns">
      <div class="field">
        <%= f.label :lastName, "Last Name" %>
        <%= f.text_field :lastName, class: "edit-profile-field" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="three columns">
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "edit-profile-field" %>
      </div>
    </div>
    <div class="three columns">
       <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city, class: "edit-profile-field" %>
      </div>
    </div>
    <div class="three columns">
       <div class="field">
        <%= f.label :profileImg, "Profile Image" %>
        <%= f.file_field :profileImg, class: "edit-profile-field" %>
      </div>
    </div>
  </div>
  <div class="row">
  <div class="actions">
    <%= f.submit "Update", class: "profile-submit" %>
  </div>
  </div>
<% end %>